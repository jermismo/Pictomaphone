<Application 
    x:Class="Jermismo.Photo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:jp="clr-namespace:Jermismo.Photo">

    <!--Application Resources-->
    <Application.Resources>
        <jp:LocalizedStrings x:Key="LocalizedStrings" />
                
        <!-- Colors -->
        <SolidColorBrush x:Key="jpForeground" Color="White" />
        <SolidColorBrush x:Key="jpBackground" Color="#FF222222" />
        <SolidColorBrush x:Key="jpWorkArea" Color="#FF111111" />
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>
    
    

</Application>